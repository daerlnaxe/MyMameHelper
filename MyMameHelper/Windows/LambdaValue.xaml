<Window x:Class="MyMameHelper.Windows.LambdaValue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyMameHelper.Windows"
        mc:Ignorable="d"
        Title="LambdaValue" Height="162.914" Width="441.391">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="49*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <Label x:Name="label" Content="Label" HorizontalAlignment="Left" Width="108"/>
        <TextBox x:Name="textBlock"  TextWrapping="Wrap" Text="{Binding Valeur}" Grid.Column="1" KeyboardNavigation.TabIndex="0" />

        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" VerticalAlignment="Bottom" Grid.Row="2" Margin="0" Grid.ColumnSpan="2">
            <Button x:Name="Save" Content="Save" IsDefault="True" Click="Save_Click"/>
            <Button x:Name="Cancel" Content="Cancel" IsCancel="True"/>
        </StackPanel>

    </Grid>
</Window>
