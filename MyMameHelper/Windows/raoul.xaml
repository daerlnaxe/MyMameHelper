<Window x:Class="MyMameHelper.Windows.raoul"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyMameHelper.Windows"
        xmlns:converters="clr-namespace:MyMameHelper.DataBinding"
        mc:Ignorable="d"
        Title="Window1" Height="240" Width="480" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Topmost="True">
    <Window.Resources>
        <converters:FormatPercentConverter x:Key="PercentConverter" />
    </Window.Resources>
    <Grid>
        <Label x:Name="label" Content="{Binding Path=Progress_Value, Converter={StaticResource PercentConverter}}" HorizontalAlignment="Center" Height="29" Margin="0,0,0,60" VerticalAlignment="Bottom" Width="42" Panel.ZIndex="1"/>
        <ProgressBar Height="29" Margin="20,0,20,60" VerticalAlignment="Bottom" Maximum="{Binding Progress_Max}" Value="{Binding Progress_Value}"/>
        <Button x:Name="btStop" Content="Stop" HorizontalAlignment="Center" Margin="0,0,0,15" Padding="3" VerticalAlignment="Bottom" Width="75" Click="BtStop_Click"/>

    </Grid>
</Window>
