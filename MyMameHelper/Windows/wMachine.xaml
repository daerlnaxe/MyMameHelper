<Window x:Class="MyMameHelper.Windows.wMachine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyMameHelper.Windows"
        mc:Ignorable="d"
        Title="wMachine" Height="232.45" Width="375.828">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="3"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel  Grid.Row="5" VerticalAlignment="Bottom" Orientation="Horizontal" FlowDirection="RightToLeft" Grid.ColumnSpan="3">
            <Button Content="Save" IsDefault="True" Click="Button_Click"/>
            <Button Content="Cancel" IsCancel="True"/>
        </StackPanel>
        <Label x:Name="label" Content="Select Constructor:" />
        <ComboBox x:Name="cboxConst" Grid.Column="1" ItemsSource="{Binding Constructeurs}"  SelectedValue="{Binding Machine.IDConstructeur}" DisplayMemberPath="Nom" SelectedValuePath="ID"/>
        <!-- Machine -->
        <Label x:Name="label1" Content="Machine:"  Grid.Row="1" />
        <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding Machine.Nom}"/>
        <!-- Year -->
        <Label Content="Year:" Grid.Row="2"/>
        <TextBox Text="{Binding Machine.Year}" Grid.Row="2" Grid.Column="1"/>
        <!-- AllowCpath -->
        <CheckBox IsChecked="{Binding Machine.AllowCPath}" Content="Allow Machine Name for Path" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="3" ToolTip="Used for copy files method">

        </CheckBox>
    </Grid>
</Window>
