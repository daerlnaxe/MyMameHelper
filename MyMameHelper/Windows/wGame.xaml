<Window x:Class="MyMameHelper.Windows.wGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyMameHelper.Windows"
        mc:Ignorable="d"
        Title="EditGame" Height="600" Width="1024">
    <Grid Margin="15" ScrollViewer.VerticalScrollBarVisibility="Visible">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <!-- Roms -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10*" />
            <RowDefinition Height="20"/>
            <!-- Boutons -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="44*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="245*"/>
        </Grid.ColumnDefinitions>
        <Grid.Resources>
            <Style TargetType="Label">
                <Setter Property="Margin" Value="5" />
            </Style>
            <Style TargetType="TextBox" >
                <Setter Property="Margin" Value="5"/>
            </Style>
            <Style TargetType="ComboBox">
                <Setter Property="Margin" Value="5"/>
            </Style>
            <Style TargetType="DataGrid">
                <Setter Property="Margin" Value="5"/>
            </Style>
            <Style TargetType="CheckBox">
                <Setter Property="Margin" Value="5"/>
            </Style>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Padding" Value="5"/>
            </Style>
        </Grid.Resources>
        <!-- Nom -->
        <Label Content="Name:" />
        <Label Content="{Binding Game.Game_Name}" Grid.Column="1" Grid.ColumnSpan="2"/>
        <!-- Description -->
        <Label Content="Description:" Grid.Row="1" />
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Game.Description}" Grid.ColumnSpan="2"/>

        <!-- Unwanted -->
        <CheckBox Content="Unwanted" Grid.Row="2" Grid.Column="1" IsChecked="{Binding Game.Unwanted}"/>

        <!-- Year 
        <Label Content="Year:" Grid.Row="4" />
        <TextBox Text="{Binding Game.Year}" Grid.Row="4" Grid.Column="1"/-->

        <!-- Genre -->
        <Label Content="Genre:" Grid.Row="6"/>
        <ComboBox Grid.Row="6" Grid.Column="1" ItemsSource="{Binding Genres}" DisplayMemberPath="Nom" SelectedValuePath="ID"  SelectedValue="{Binding Game.Genre}" Grid.ColumnSpan="2" />

        <!-- Constructeur 
        <Label Content="Constructeur:" Grid.Row="8"/>
        <ComboBox Grid.Row="8" Grid.Column="1" ItemsSource="{Binding Constructeurs}" DisplayMemberPath="Nom" SelectedValuePath="ID" SelectedItem="{Binding SelConstruct}"  Grid.ColumnSpan="2"/>

        < Machine 
        <Label Content="Machine:" Grid.Row="9" />
        <ComboBox Grid.Row="9" Grid.Column="1" SelectedIndex="{Binding SelIndexMachine}" Grid.ColumnSpan="2"/-->

        <!-- Roms -->
        <Label Content="Roms:" Grid.Row="12" />
        <DataGrid Grid.Row="12" Grid.Column="1" Grid.ColumnSpan="3" Grid.RowSpan="2"  ItemsSource="{Binding Game.Roms}" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Parent" Binding="{Binding IsParent}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Game Name" Binding="{Binding Archive_Name}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" />
                <DataGridCheckBoxColumn Header="Unwanted" Binding="{Binding Unwanted}"/>
                <DataGridComboBoxColumn Header="Manufacturer" SelectedValueBinding="{Binding Manufacturer}"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="20" Orientation="Horizontal" FlowDirection="RightToLeft" Grid.ColumnSpan="6">
            <Button Content="Save" IsDefault="True" Click="Button_Click" />
            <Button x:Name="btCancel" Content="Cancel" IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
