<Window x:Class="MyMameHelper.Windows.AsyncLoading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyMameHelper.Windows"
        mc:Ignorable="d"
        Title="Loading" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto" MinWidth="82"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="92*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="43*"/>
        </Grid.RowDefinitions>
        <ProgressBar Height="43" Margin="10,0,10,20"  VerticalAlignment="Bottom" Grid.Row="2" Grid.ColumnSpan="3"/>
        <Label x:Name="label" Content="Label:" HorizontalAlignment="Left" Margin="0" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="41"/>
        <Label x:Name="label1" Content="{Binding Inform}" Grid.Column="1" Grid.Row="1"/>

    </Grid>
</Window>
