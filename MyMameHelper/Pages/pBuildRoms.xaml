<Page x:Class="MyMameHelper.Pages.pBuildRoms"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyMameHelper.Pages"
      xmlns:commands="clr-namespace:MyMameHelper.Commands"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="pWorkPage" Loaded="Page_Loaded">
    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="ComboBox" x:Key="AutoHide">
            <Setter Property="Visibility" Value="Visible"/>
            <Setter Property="Margin" Value="5"/>
            <Style.Triggers>
                <DataTrigger Value="0" Binding="{Binding RelativeSource={RelativeSource Self}, Path=ItemsSource.Count}">
                    <Setter Property="Visibility" Value="Collapsed" />
                </DataTrigger>
            </Style.Triggers>

        </Style>
        <!-- On ne peut pas binder une colonne de datagrid avec autre chose que static -->
        <CollectionViewSource x:Key="ItemsGenres" Source="{Binding Genres}" />
        <CollectionViewSource x:Key="ItemsDevelopers" Source="{Binding Developers}" />
    </Page.Resources>
    <Page.CommandBindings>
        <CommandBinding Command="commands:UICommands.SaveDb" Executed="SaveRoms" CanExecute="Can_Save"/>
        <CommandBinding Command="commands:UICommands.ChangeCmd" Executed="Ex_Change" CanExecute="Can_Change"/>
        <!--CommandBinding Command="commands:UICommands.DeleteFromDb" Executed="DeleteGames" CanExecute="Can_Delete"/-->
        <!-- Panneau de gauche -->
        <CommandBinding Command="commands:UICommands.SearchCmd" Executed="Ex_Search" />
        <CommandBinding Command="commands:UICommands.Select_AllCmd" Executed="Select_All"/>
        <CommandBinding Command="commands:UICommands.SwapLeft2Right" Executed="Ex_Left2Right" CanExecute="Can_Left2Right"/>

        <!-- Panneau de droite -->
        <CommandBinding Command="commands:UICommands.SwapRight2Left" CanExecute="Can_Right2Left" Executed="Ex_Right2Left"/>
        <CommandBinding Command="commands:UICommands.ResetRight" CanExecute="Can_ResetRight" Executed="Ex_ResetRight"/>
    </Page.CommandBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="325*"/>
            <ColumnDefinition Width="89*"/>
            <ColumnDefinition Width="386*"/>
        </Grid.ColumnDefinitions>
        <!-- Panneau du haut -->
        <Grid >
            <Label Content="Content Database Area:" />
        </Grid>
        <Grid Grid.Column="2">
            <Label Content="Database modification area:" Grid.ColumnSpan="3"/>
        </Grid>

        <!-- DockPanel Gauche -->
        <DockPanel Grid.Row="1">
            <StackPanel DockPanel.Dock="Left">
                <Button Content="Search" Command="commands:UICommands.SearchCmd"/>
            </StackPanel>

            <!-- Grille basse -->
            <Grid DockPanel.Dock="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Content="Data:" />
                <Label Grid.Column="1" Content="{Binding RawRomsCollec.Count}"/>
                <Label Content="Data Selected:" Grid.Row="1"  />
                <Label Grid.Row="1" Grid.Column="1" Content="{Binding SelectedItems.Count, ElementName=dg2Organize}"/>
            </Grid>

            <DockPanel >
                <Grid DockPanel.Dock="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="123*"/>
                        <ColumnDefinition Width="181*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <RadioButton GroupName="Mode" Content="Mode Archive" Checked="RightMode_Changed" VerticalAlignment="Top" Margin="5" />
                    <RadioButton GroupName="Mode" Content="Mode Game" Grid.Row="1" Checked="RightMode_Changed" VerticalAlignment="Top" Margin="5" IsChecked="True"/>
                    <Label Grid.Column="1" Grid.Row="0" Grid.RowSpan="3" Content="{Binding LeftFilter}" KeyUp="LListView_KeyUp" />
                </Grid>
                <!-- grille gauche (central) -->
                <DataGrid x:Name="dg2Organize" KeyUp="LListView_KeyUp"  IsReadOnly="True"  AutoGenerateColumns="False"
                          ItemsSource="{Binding RawRomsCollec}" SelectedItem="{Binding LeftSelected}" >
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Select All" Command="commands:UICommands.Select_AllCmd"/>
                            <MenuItem Header="Add" Command="commands:UICommands.SwapLeft2Right"/>
                            <Separator/>
                            <MenuItem Header="Delete From Database" Command="commands:UICommands.DeleteFromDb"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Archive Name" Binding="{Binding Name}" SortDirection="Ascending"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" />
                        <DataGridTextColumn Header="Source File" Binding="{Binding Source_File}" />
                        <DataGridTextColumn Header="Clone Of" Binding="{Binding Clone_Of}" />
                        <DataGridTextColumn Header="Developer" Binding="{Binding Manufacturer}" />
                        <DataGridTextColumn Header="IsBios" Binding="{Binding Is_Bios}" />
                        <DataGridTextColumn Header="IsMecanic" Binding="{Binding Is_Mechanical}" />
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </DockPanel>

        <!-- Panneau central -->
        <StackPanel Grid.Row="1" Grid.Column="1">
            <!--Button x:Name="btAdd" Content="Add" Command="local:pUpdater.AddCmd"/-->
        </StackPanel>


        <!-- Panneau de droite -->
        <DockPanel Grid.Column="2" Grid.Row="1" >

            <StackPanel DockPanel.Dock="Right">
                <StackPanel Grid.Column="1">
                    <Border Margin="5" CornerRadius="5" BorderBrush="Black" BorderThickness="1" Padding="5" >
                        <StackPanel Orientation="Vertical">
                            <!-- Constructeurs -->
                            <Label Content="Select a Developer:" />
                            <ComboBox x:Name="cbConstructeur" ItemsSource="{Binding Developers}" DisplayMemberPath="Nom" SelectedValuePath="ID" SelectedItem="{Binding CbDeveloper_Selected}" />
                            <!-- Hardware -->
                        </StackPanel>
                    </Border>
                    <!-- Unwanted -->
                    <Border Margin="5" CornerRadius="5" BorderBrush="Black" BorderThickness="1" Padding="5">
                        <CheckBox x:Name="cbUnwanted" Content="Unwanted" />
                    </Border>
                    <!-- Genre -->
                    <!-- Manufacturer -->
                <Border Margin="0,5" CornerRadius="5" BorderBrush="Black" BorderThickness="1" Padding="5" Width="140">
                    <StackPanel Orientation="Vertical">
                        <!-- Constructeurs -->
                        <Label Content="Select a Constructor" />
                            <ComboBox x:Name="cboxConstructeur" ItemsSource="{Binding Constructeurs}" DisplayMemberPath="Nom" SelectedValuePath="ID" SelectionChanged="CbConstructeur_SelectionChanged" />
                        <!-- Hardware -->
                        <Label Content="Select a Machine"/>
                            <ComboBox x:Name="cboxMachines" ItemsSource="{Binding Machines}" DisplayMemberPath="Nom" SelectedValuePath="ID" IsEnabled="{Binding Machines.Count}" Style="{StaticResource ResourceKey=AutoHide}"/>
                        </StackPanel>
                </Border>
                </StackPanel>
                <Button Content="Change" Command="commands:UICommands.ChangeCmd" />
                <Button Content="Save" Command="commands:UICommands.SaveDb"/>
            </StackPanel>
            <Grid DockPanel.Dock="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Content="Data:" />
                <Label Grid.Column="1" Content="{Binding Path=RomsToSave.Count}"/>
                <Label Content="Data Selected:" Grid.Row="1"  />
                <Label Grid.Row="1" Grid.Column="1" Content="{Binding SelectedItems.Count, ElementName=dgRight}"/>
            </Grid>
            <DockPanel>
                <Grid DockPanel.Dock="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="123*"/>
                        <ColumnDefinition Width="181*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <RadioButton GroupName="Mode2" Content="Mode Archive" Checked="RightMode_Changed" VerticalAlignment="Top" Margin="5" />
                    <RadioButton GroupName="Mode2" Content="Mode Game" Grid.Row="1" IsChecked="True" Checked="RightMode_Changed" VerticalAlignment="Top" Margin="5"/>
                    <Label Grid.Column="1" Grid.Row="0" Grid.RowSpan="3" Content="{Binding RightFilter}" KeyUp="RListView_KeyUp" />
                </Grid>
                <DataGrid x:Name="dgRight" AutoGenerateColumns="False" CanUserAddRows="False" KeyUp="RListView_KeyUp"
                          ItemsSource="{Binding RomsToSave}" SelectedItem="{Binding RightSelected}">
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Remove" Command="commands:UICommands.SwapRight2Left"/>
                            <MenuItem Header="Reset" Command="commands:UICommands.ResetRight" />
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Archive Name" Binding="{Binding Archive_Name}" IsReadOnly="True" SortDirection="Ascending"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}"  IsReadOnly="True"/>
                        <DataGridTextColumn Header="Clone Of" Binding="{Binding Aff_Clone_Of}"  IsReadOnly="True"/>
                        <DataGridTextColumn Header="Source File" Binding="{Binding SourceFile}" />
                        <DataGridCheckBoxColumn Header="Unwanted" Binding="{Binding Unwanted}" />
                        <DataGridComboBoxColumn Header="Developer"  ItemsSource="{Binding Source={StaticResource ItemsDevelopers}}" DisplayMemberPath="Nom" SelectedValuePath="ID" SelectedValueBinding="{Binding Manufacturer}"/>
                    </DataGrid.Columns>
                </DataGrid>

            </DockPanel>

        </DockPanel>
    </Grid>
</Page>
