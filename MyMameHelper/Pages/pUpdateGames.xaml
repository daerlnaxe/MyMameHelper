<Page x:Class="MyMameHelper.Pages.pUpdateGames"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyMameHelper.Pages"
      xmlns:commands="clr-namespace:MyMameHelper.Commands"
      xmlns:collections="clr-namespace:System.Collections;assembly=mscorlib"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="pWorkPage" Loaded="Page_Loaded">
    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="ComboBox">

            <Setter Property="Visibility" Value="Visible"/>
            <Style.Triggers>
                <DataTrigger Value="0" Binding="{Binding RelativeSource={RelativeSource Self}, Path=ItemsSource.Count}">
                    <Setter Property="Visibility" Value="Collapsed" />
                </DataTrigger>
            </Style.Triggers>

        </Style>
        <!-- On ne peut pas binder une colonne de datagrid avec autre chose que static -->
        <CollectionViewSource x:Key="ItemsGenres" Source="{Binding Genres}" />
        <CollectionViewSource x:Key="ItemsDevelopers" Source="{Binding Developers}" />
        <collections:ArrayList x:Key="ItemsRate">
            <collections:DictionaryEntry Key="0" Value="0"/>
            <collections:DictionaryEntry Key="1" Value="1"/>
            <collections:DictionaryEntry Key="2" Value="2"/>
            <collections:DictionaryEntry Key="3" Value="3"/>
            <collections:DictionaryEntry Key="4" Value="4"/>
            <collections:DictionaryEntry Key="5" Value="5"/>
        </collections:ArrayList>
    </Page.Resources>
    <Page.CommandBindings>
        <CommandBinding Command="commands:UICommands.UpdateDb" Executed="UpdateGames" CanExecute="Can_Update"/>
        <CommandBinding Command="commands:UICommands.ChangeCmd" Executed="Ex_Change" CanExecute="Can_Change"/>
        <CommandBinding Command="commands:UICommands.DeleteFromDb" Executed="DeleteGames" CanExecute="Can_Delete"/>
        <!-- Panneau de gauche -->
        <CommandBinding Command="commands:UICommands.SearchCmd" Executed="Ex_Search" />
        <CommandBinding Command="commands:UICommands.Select_AllCmd" Executed="Select_All"/>
        <CommandBinding Command="commands:UICommands.SwapLeft2Right" Executed="Ex_AddGame" CanExecute="Can_AddGame"/>

        <!-- Panneau de droite -->
        <CommandBinding Command="commands:UICommands.EditRom" CanExecute="Can_EditRom" Executed="Ex_EditRom" />
        <CommandBinding Command="commands:UICommands.SwapRight2Left" CanExecute="Can_RemoveRight" Executed="Ex_RemoveRight"/>
        <CommandBinding Command="commands:UICommands.ResetRight" CanExecute="Can_ResetRight" Executed="Ex_ResetRight"/>
    </Page.CommandBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="325*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="386*"/>
        </Grid.ColumnDefinitions>
        <!-- Panneau du haut -->
        <Grid >
            <Label Content="Content Database Area:" />
        </Grid>
        <Grid Grid.Column="2">
            <Label Content="Database modification area:" Grid.ColumnSpan="3"/>
        </Grid>

        <!-- DockPanel Gauche -->
        <DockPanel Grid.Row="1">
            <StackPanel DockPanel.Dock="Left">
                <Button Content="Search" Command="commands:UICommands.SearchCmd"/>
            </StackPanel>
            <Grid DockPanel.Dock="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="Data:" Grid.Row="2"/>
                <Label Grid.Column="1" Grid.Row="2" Content="{Binding DbGames.Count}"/>
                <Label Content="Data Selected:" Grid.Row="3"  />
                <Label Grid.Row="3" Grid.Column="1" Content="{Binding SelectedItems.Count, ElementName=dg2Organize}"/>

            </Grid>
            <!-- Grille de gauche -->
            <StackPanel>
                <Label Content="Games:" />
                <DataGrid x:Name="dg2Organize" Height="500" ItemsSource="{Binding DbGames}" IsReadOnly="True"  AutoGenerateColumns="False" SelectedItem="{Binding LeftSel}" VerticalAlignment="Top">
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Select All" Command="commands:UICommands.Select_AllCmd"/>
                            <MenuItem Header="Add" Command="commands:UICommands.SwapLeft2Right"/>
                            <Separator/>
                            <MenuItem Header="Delete From Database" Command="commands:UICommands.DeleteFromDb"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Game Name" Binding="{Binding Game_Name}" SortDirection="Ascending"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" />
                        <DataGridTextColumn Header="Machine" Binding="{Binding Aff_Machine}" />
                        <DataGridCheckBoxColumn Header="Unwanted" Binding="{Binding Unwanted}" />
                        <DataGridTextColumn Header="Genre" Binding="{Binding Aff_Genre}" />
                        <DataGridComboBoxColumn Header="Rate" SelectedValueBinding="{Binding Rate}" ItemsSource="{StaticResource ItemsRate}"  DisplayMemberPath="Value" SelectedValuePath="Key"/>
                        <DataGridCheckBoxColumn Header="Mahjong" Binding="{Binding IsMahjong}" />
                        <DataGridCheckBoxColumn Header="Quizz" Binding="{Binding IsQuizz}" />
                        <DataGridTextColumn Header="Developer" Binding="{Binding Aff_Developer}" />
                    </DataGrid.Columns>
                    <!--" DataGrid.RowDetailsTemplate>
                    <DataTemplate>
                        <StackPanel Margin="10">
                            <Label Content="Roms:"/>
                            <DataGrid ItemsSource="{Binding Roms}" AutoGenerateColumns="False" IsReadOnly="true">
                                <DataGrid.Columns>
                                    <DataGridCheckBoxColumn Header="Parent" Binding="{Binding IsParent}"/>                                    
                                    <DataGridTextColumn Header="Archive_Name" Binding="{Binding Archive_Name}"/>
                                    <DataGridTextColumn Header="Description" Binding="{Binding Description}"/>
                                    <DataGridCheckBoxColumn Header="Unwanted" Binding="{Binding Unwanted}"/>                                    
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </DataTemplate>
                </-->
                </DataGrid>
                <Expander Header="Fiche" IsExpanded="False">
                    <StackPanel>
                        <Label Content="Roms:"/>
                        <DataGrid ItemsSource="{Binding Path=LeftSel.Roms}" Height="150" AutoGenerateColumns="False" VerticalAlignment="Top" >
                            <DataGrid.Columns>
                                <DataGridCheckBoxColumn Header="Parent" Binding="{Binding IsParent}"/>
                                <DataGridTextColumn Header="Archive_Name" Binding="{Binding Archive_Name}"/>
                                <DataGridTextColumn Header="Description" Binding="{Binding Description}"/>
                                <DataGridCheckBoxColumn Header="Unwanted" Binding="{Binding Unwanted}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </DockPanel>

        <!-- Panneau central -->
        <StackPanel Grid.Row="1" Grid.Column="1">
            <Button x:Name="btAdd" Content="Add" Command="commands:UICommands.SwapLeft2Right"/>
        </StackPanel>


        <!-- Panneau de droite -->
        <DockPanel Grid.Column="2" Grid.Row="1" >

            <StackPanel DockPanel.Dock="Right">
                <StackPanel Grid.Column="1">
                    <Border Margin="5" CornerRadius="5" BorderBrush="Black" BorderThickness="1" Padding="5" >
                        <StackPanel Orientation="Vertical">
                            <!-- Constructeurs -->
                            <Label Content="Select a Constructor" />
                            <ComboBox x:Name="cbConstructeur" ItemsSource="{Binding Constructeurs}" DisplayMemberPath="Nom" SelectedValuePath="ID" SelectionChanged="CbConstructeur_SelectionChanged" />
                            <!-- Hardware -->
                            <Label Content="Select a Machine"/>
                            <ComboBox x:Name="cbMachines" ItemsSource="{Binding Machines}" DisplayMemberPath="Nom" SelectedValuePath="ID"   />
                        </StackPanel>
                    </Border>
                    <!-- Unwanted -->
                    <Border Margin="5" CornerRadius="5" BorderBrush="Black" BorderThickness="1" Padding="5">
                        <CheckBox x:Name="cbUnwanted" Content="Unwanted" />
                    </Border>
                    <!-- Genre -->
                    <Border Margin="5" CornerRadius="5" BorderBrush="Black" BorderThickness="1" Padding="5">
                        <StackPanel>
                            <Label Content="Select Genre:" />
                            <ComboBox x:Name="cboxGenres" ItemsSource="{Binding Genres}" DisplayMemberPath="Nom" SelectedValuePath="ID"/>
                        </StackPanel>
                    </Border>
                    <!-- Manufacturer -->
                    <Border Margin="5" CornerRadius="5" BorderBrush="Black" BorderThickness="1" Padding="5">
                        <StackPanel>
                            <Label Content="Select Developer:"/>
                            <ComboBox x:Name="cboxDevs" ItemsSource="{Binding Developers}" DisplayMemberPath="Nom" SelectedValuePath="ID"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
                <Border Margin="5" CornerRadius="5" BorderBrush="Black" BorderThickness="1" Padding="5">
                    <StackPanel>
                        <Label Content="Select Rate:" />
                        <ComboBox x:Name="cboxRate" ItemsSource="{StaticResource ItemsRate}" DisplayMemberPath="Value" SelectedValuePath="Key"/>
                    </StackPanel>
                </Border>
                <Button Content="Change" Command="commands:UICommands.ChangeCmd" />
                <Button Content="Update" Command="commands:UICommands.UpdateDb"/>
            </StackPanel>
            <Grid DockPanel.Dock="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Content="Data:" />
                <Label Grid.Column="1" Content="{Binding DbGames.Count}"/>
                <Label Content="Data Selected:" Grid.Row="1"  />
                <Label Grid.Row="1" Grid.Column="1" Content="{Binding SelectedItems.Count, ElementName=dgRight}"/>
            </Grid>
            <StackPanel>
                <Label Content="Games:"/>
                <DataGrid x:Name="dgRight" Height="500" ItemsSource="{Binding GamesModified}" AutoGenerateColumns="False" CanUserAddRows="False" SelectedItem="{Binding RightSel}">
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Edit Roms" Command="commands:UICommands.EditRom"/>
                            <Separator/>
                            <MenuItem Header="Remove" Command="commands:UICommands.SwapRight2Left"/>
                            <MenuItem Header="Reset All" Command="commands:UICommands.ResetRight"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Game Name" Binding="{Binding Game_Name}" IsReadOnly="False"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" />
                        <DataGridTextColumn Header="Machine" Binding="{Binding Aff_Machine}" />
                        <DataGridCheckBoxColumn Header="Unwanted" Binding="{Binding Unwanted}" />
                        <DataGridComboBoxColumn Header="Genre" ItemsSource="{Binding Source={StaticResource ItemsGenres}}" DisplayMemberPath="Nom" SelectedValuePath="ID" SelectedValueBinding="{Binding Genre}" />
                        <DataGridComboBoxColumn Header="Rate" Width="70" SelectedValueBinding="{Binding Rate}" ItemsSource="{StaticResource ItemsRate}"  DisplayMemberPath="Value" SelectedValuePath="Key"/>
                        <DataGridCheckBoxColumn Header="Mahjong" Binding="{Binding IsMahjong}" />
                        <DataGridCheckBoxColumn Header="Quizz" Binding="{Binding IsQuizz}" />
                        <DataGridComboBoxColumn Header="Developer" ItemsSource="{Binding Source={StaticResource ItemsDevelopers}}" DisplayMemberPath="Nom" SelectedValuePath="ID" SelectedValueBinding="{Binding Developer}"/>
                    </DataGrid.Columns>
                    <!--DataGrid.RowDetailsTemplate>
                        <DataTemplate>
                            <StackPanel Margin="10">
                                <Label Content="Roms:"/>
                                <DataGrid ItemsSource="{Binding Roms}" AutoGenerateColumns="False" IsReadOnly="true">
                                    <DataGrid.Columns>
                                        <DataGridCheckBoxColumn Header="Parent" Binding="{Binding IsParent}"/>
                                        <DataGridTextColumn Header="Archive_Name" Binding="{Binding Archive_Name}"/>
                                        <DataGridTextColumn Header="Description" Binding="{Binding Description}"/>
                                        <DataGridCheckBoxColumn Header="Unwanted" Binding="{Binding Unwanted}" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </DataTemplate>
                    </-->
                </DataGrid>
                <Expander Header="Fiche" IsExpanded="False">
                    <StackPanel>
                        <Label Content="Roms"/>
                        <DataGrid ItemsSource="{Binding Path=RightSel.Roms}" Height="150" AutoGenerateColumns="False" VerticalAlignment="Top" >
                            <DataGrid.Columns>
                                <DataGridCheckBoxColumn Header="Parent" Binding="{Binding IsParent}"/>
                                <DataGridTextColumn Header="Archive_Name" Binding="{Binding Archive_Name}"/>
                                <DataGridTextColumn Header="Description" Binding="{Binding Description}"/>
                                <DataGridCheckBoxColumn Header="Unwanted" Binding="{Binding Unwanted}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Expander>
            </StackPanel>

        </DockPanel>
    </Grid>
</Page>
