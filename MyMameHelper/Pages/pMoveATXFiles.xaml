<Page x:Class="MyMameHelper.Pages.pMoveATXFiles"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyMameHelper.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MoveATXTFile">
    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Page.Resources>

    <Grid>


        <DockPanel >
            <!-- Panneau de gauche -->
            <StackPanel DockPanel.Dock="Left" Width="156" >
                <Button x:Name="LoadList" Content="Load..."  Click="LoadList_Click"/>
                <CheckBox x:Name="useFiles" Content="Use Files Information" Height="16"  Margin="5"/>
                <Separator/>
                <Button x:Name="RB_Button" Content="Rom Folder"  VerticalAlignment="Top" Click="RB_Button_Click"/>
                <Button x:Name="DF_Button" Content="Destination Folder" Click="DF_Button_Click" />

            </StackPanel>

            <!-- Panneau du haut -->
            <StackPanel DockPanel.Dock="Top">
                <Grid Height="60">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50*"/>
                        <RowDefinition Height="50*"/>
                    </Grid.RowDefinitions>
                    <Label Content="Rom Folder:"/>
                    <Label Content="{Binding Rom_Folder}" Grid.Row="0" Grid.Column="1"/>
                    <Label Content="Archive Folder:" Grid.Row="1"/>
                    <Label Content="{Binding Destination_Folder}" Grid.Row="1" Grid.Column="1"/>
                </Grid>
            </StackPanel>



            <!-- Panneau du bas -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin="15,15">
                <Button Name="Create_HelpFiles" Content="Make Help Files" Click="Create_HelpFiles_Click" />
                <Button Name="Proceed" Content="Move Roms" Click="Proceed_Click" />
            </StackPanel>

            <!-- Panneau du milieu -->
            <ListView x:Name="listView" ItemsSource="{Binding Games}" Margin="20,20,19,20" >
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Archive Name" DisplayMemberBinding="{Binding Archive_Name}" />
                        <GridViewColumn Header="Game Name" DisplayMemberBinding="{Binding Game_Name}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </DockPanel>


    </Grid>
</Page>
